@using CoaxysProjectTracker.Extensions
@using CoaxysProjectTracker.Models
@model List<Epic>

@{
    ViewBag.Title = "Epics";
}
    
<h1>Epics</h1>

<ol class="breadcrumb">
    <li><a href="@Url.Action("index", "project")">Projets</a></li>
    <li class="active">Epics</li>
</ol>

@Html.Raw(TempData.GetMessages())

<div class="list list-project">
    <div class="row">
        <div class="col-md-4">
            <div class="list-item list-item-epic new-epic">
                <a href="@Url.Action("create", "epic")" class="modal-form">
                    <h3>
                        <i class="glyphicon glyphicon-plus"></i>
                        Nouvel epic
                    </h3>
                </a>
            </div>
        </div>
        @foreach (Epic epic in Model)
        {
            <div class="col-md-4">
                <div class="list-item list-item-epic">
                    <h3>@epic.Name</h3>
                    <p>@epic.Description</p>
                    <p>
                        <a href="@Url.Action("index", "story")" class="btn btn-primary" role="button">Stories</a>
                        <a href="@Url.Action("edit", "epic", new { id = epic.ID })" class="btn btn-primary modal-form" role="button">Modify</a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>