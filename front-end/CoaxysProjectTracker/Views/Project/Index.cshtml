@using CoaxysProjectTracker.Extensions
@using CoaxysProjectTracker.Models
@model List<Project>

@{ 
    ViewBag.Title = "Projets";
}

<h1>Projets</h1>

<ol class="breadcrumb">
    <li class="active">Projets</li>
</ol>

@Html.Raw(TempData.GetMessages())

<div class="list list-project">
    <div class="row">
        <div class="col-md-4">
            <div class="list-item list-item-project new-project">
             
                    <a href="@Url.Action("create", "project")" class="modal-form">
                        <h3>
                            <i class="glyphicon glyphicon-plus"></i>
                            Nouveau projet
                        </h3>
                    </a>
            </div>
        </div>
        @foreach (Project project in Model)
        {
            <div class="col-md-4">
                <div class="list-item list-item-project">
                    <h3>@project.Name</h3>
                    <p>@project.Description</p>
                    <p>
                        <a href="@Url.Action("index", "epic")" class="btn btn-primary" role="button">Epics</a> |
                        <a href="@Url.Action("edit", "project", new { id = project.ID })" class="btn btn-primary modal-form" role="button">Modify</a> |
                        <a href="@Url.Action("ListAllTasks", "Task")" class="btn btn-primary" role="button">Tasks</a>
                    </p>
                </div>

            </div>
        }
    </div>
</div>
