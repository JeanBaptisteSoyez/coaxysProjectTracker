@using PoC_MvcFromJsonApi.Models
@model List<User>
@{
    ViewBag.Title = "PoC";
}

<h2>Sync data from REST API</h2>

@foreach (var user in Model)
{
    <div>@user.ID => @user.Name</div>
}

<h2>Async data from REST API</h2>

<div id="target"></div>
<button id="loadUsers">Load users...</button>
<button id="loadComplexUsers">Load complex users...</button>
<button id="loadUsersAsyncCtrl">Load users with async controller...</button>