# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /users/?                                UserController.users()
POST    /new-user/?                             UserController.createUser()
GET     /projects/?                             ProjectController.clientsProjects()
POST    /new-project/?                          ProjectController.createProject()
POST    /detail-project/:id/?                   ProjectController.project(id:Int)
GET     /sprints/?                              SprintController.sprints()
POST    /new-sprint/?                           SprintController.createSprint()
GET     /epics/?                                EpicController.epics()
POST    /new-epic/?                             EpicController.createEpic()
GET     /stories/?                              StoryController.stories()
POST    /new-story/?                            StoryController.createStory()
GET     /tasks/?                                TaskController.tasks()
POST    /new-task/?                             TaskController.createTask()
GET     /status-task/:id/?                      StatusController.actualStatus(id:Int)
PUT     /status-task/?                          StatusController.changeStatus()


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
